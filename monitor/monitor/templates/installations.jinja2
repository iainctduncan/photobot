{% extends "layout.jinja2" %}

{% block content %}
<div class="content notifications">
  <h2>Photobot Installations</h2>

  <table class="installations">
    <tr>
      <th>UID</th>
      <th>Name</th>
      <th>Active</th>
      <th>IP</th>
      <th>Last Health Check</th>
      <th>Status</th>
    </tr>
  {% for item in installations %}
    <tr>
      <td><span>{{item.uid}}</span></td>
      <td><span>{{item.name}}</span></td>
      <td>{{"Active" if item.active else "Inactive"}}</span></td>
      <td><span>{{item.ip_address}}</span></td>
      <td><span>{{item.last_ping.datetime}}</span></td>
      <td><strong>{{item.status}}</strong></td>
    </tr>
  {% endfor %}
  </table>

</div>
{% endblock content %}
